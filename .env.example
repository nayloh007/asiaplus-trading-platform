# Database Configuration
USE_SQLITE=true
DATABASE_URL=file:./database.db

# PostgreSQL Configuration (if not using SQLite)
# PGPORT=5432
# PGPASSWORD=your_database_password_here
# PGUSER=your_database_user
# PGDATABASE=your_database_name
# PGHOST=your_database_host
# DATABASE_URL=postgresql://user:password@host:port/database

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Admin Configuration (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-change-this
ADMIN_EMAIL=admin@yourdomain.com

# Application Settings
NODE_ENV=development
PORT=3000

# API Keys (if needed)
# API_KEY=your_api_key_here
# SECRET_KEY=your_secret_key_here

# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual credentials
# 3. Never commit .env file to version control
# 4. Change default passwords before deploying to production